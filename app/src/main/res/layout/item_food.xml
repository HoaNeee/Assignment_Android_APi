<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"

            android:src="@drawable/img" />
        <TextView
            android:id="@+id/tv_ten_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten mon an"
            android:textSize="17dp"
            android:textStyle="bold"

            android:layout_below="@+id/img_food"
            />
        <TextView
            android:id="@+id/tv_descr_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mo ta mon an"
            android:textSize="13dp"
            android:layout_below="@+id/tv_ten_food"
            />
        <TextView
            android:id="@+id/tv_price_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100000"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_descr_food"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginStart="90dp"
            android:src="@drawable/img_2"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>