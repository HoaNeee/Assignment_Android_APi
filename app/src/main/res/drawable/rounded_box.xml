<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape cho nền trong suốt -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu trong suốt -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <!-- Shape cho viền đen -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Màu trong suốt -->
            <stroke
                android:width="1dp"
            android:color="@color/gray"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>